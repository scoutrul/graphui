{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": 2,
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "no-extra-parens": 2,
        "dot-location": [
            "error",
            "property"
        ],
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "curly": 2,
        "no-else-return": 1,
        "no-mixed-spaces-and-tabs": "off"
    }
}